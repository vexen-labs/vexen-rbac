# Database configuration

# TortoiseORM (formato: postgres://)
# DATABASE_URL=postgres://rbac_user:rbac_password@localhost:5432/rbac_db

# SQLAlchemy 2.0 (formato: postgresql+asyncpg://)
DATABASE_URL=postgresql+asyncpg://rbac_user:rbac_password@localhost:5432/rbac_db

# Database pool settings (SQLAlchemy)
DB_ECHO=False                # True para ver SQL queries en logs
DB_POOL_SIZE=5               # Tamaño del pool de conexiones
DB_MAX_OVERFLOW=10           # Máximo de conexiones adicionales

# Application settings
DEBUG=True
LOG_LEVEL=INFO
